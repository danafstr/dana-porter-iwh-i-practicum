doctype html
html(lang="en")
    head
        title Update Custom Object Form | Integrating With HubSpot I Practicum
        link(rel="Return to the homepage", href="/")
    body
        .form-wrapper
            p User: #{userEmail}
            p Favorite Color: #{favoriteColor}
            form(method="POST")
                label(for="newVal") New favorite color
                label(for="newVal2") New nick name
                input(type="text" name="newVal2" required)
                input(type="text" name="newVal" required)
                input(type="submit" value="Submit")